# PostgreSQL DB Connection
POSTGRES_DB=financialdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# LLM Configuration
LLM_PROVIDER="google" # Can be "google" or "ollama"

# For Google Gemini
GOOGLE_API_KEY="YOUR_GOOGLE_API_KEY"
GOOGLE_MODEL="gemini-1.5-flash"

# For local Ollama
OLLAMA_BASE_URL="http://host.docker.internal:11434"
OLLAMA_MODEL="llama3"

# JWT configuration
JWT_SECRET_KEY=change-me-in-prod
JWT_EXPIRE_MINUTES=60

# FastAPI base URL (used by the Next.js UI when running outside Docker)
FASTAPI_BASE_URL=http://localhost:8000

# Application DB URL (used only when running outside Docker)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/financialdb
